    "configuration": {
      "title": "Cappy",
      "properties": {
        "cappy.autoUpdateCopilotContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update Copilot context when prevention rules change"
        },
        "cappy.maxPreventionRules": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of prevention rules to include in Copilot context"
        },
        "cappy.taskTimeEstimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic task time estimation and atomicity analysis"
        },
        "cappy.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for Cappy events"
        },
        "cappyrag.model": {
          "type": "string",
          "enum": [
            "fast",
            "quality"
          ],
          "default": "fast",
          "description": "Model type for embeddings: fast (lightweight) or quality (better accuracy)"
        },
        "cappyrag.topK": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of top results to return in searches"
        },
        "cappyrag.maxStorageGB": {
          "type": "number",
          "default": 2,
          "minimum": 0.1,
          "maximum": 50,
          "description": "Maximum storage limit in GB for LanceDB and cache"
        },
        "cappyrag.maxNodes": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 100000,
          "description": "Maximum number of nodes in the graph"
        },
        "cappyrag.maxEdges": {
          "type": "number",
          "default": 50000,
          "minimum": 1000,
          "maximum": 500000,
          "description": "Maximum number of edges in the graph"
        },
        "cappyrag.excludeGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "out/**",
            "*.vsix",
            "*.jpg",
            "*.png",
            "*.gif",
            "*.pdf",
            "*.zip"
          ],
          "description": "Glob patterns for files and directories to exclude from indexing"
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/capybara.json"
      }
    ],
    "languages": [
      {
        "id": "cappy-task-xml",
        "aliases": [
          "Cappy Task XML",
          "cappy-task"
        ],
        "extensions": [
          ".task.xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown.cappy",
        "path": "./syntaxes/forge-task.tmLanguage.json"
      },
      {
        "language": "cappy-task-xml",
        "scopeName": "text.xml.cappy.task",
        "path": "./syntaxes/cappy-task-xml.tmLanguage.json"
      }
    ],
    "languageModelTools": [
      {
        "name": "cappy_init",
        "displayName": "Cappy: Initialize",
        "modelDescription": "Initialize Cappy structure in the workspace (.cappy folder, config files, copilot-instructions.md)",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_knowstack",
        "displayName": "Cappy: Know Stack",
        "modelDescription": "Analyze the workspace and generate stack.md documentation with project structure and technology stack",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_new_task",
        "displayName": "Cappy: New Task",
        "modelDescription": "Generate step-by-step script for creating a new Cappy task with category, description, and steps",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_create_task",
        "displayName": "Cappy: Create Task File",
        "modelDescription": "Create XML task file with rich context injection and automatic prevention rules",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_work_on_task",
        "displayName": "Cappy: Work on Current Task",
        "modelDescription": "Execute current task step with context-aware assistance and prevention rules verification",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_complete_task",
        "displayName": "Cappy: Complete Task",
        "modelDescription": "Complete current task, capture learnings, update context metrics and move to history",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_reindex",
        "displayName": "Cappy: Reindex",
        "modelDescription": "Rebuild semantic indexes for tasks, documentation and prevention rules",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappyrag_add_document",
        "displayName": "CappyRAG: Add Document",
        "modelDescription": "Add a document to the CappyRAG knowledge base with semantic indexing and processing",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Absolute path to the document file to add"
            }
          },
          "required": ["filePath"]
        }
      },
      {
        "name": "cappyrag_query_knowledge_base",
        "displayName": "CappyRAG: Query Knowledge Base",
        "modelDescription": "Search the CappyRAG knowledge base using semantic and text-based search with relevance scoring",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The search query to find relevant information"
            },
            "limit": {
              "type": "number",
              "description": "Maximum number of results to return (default: 10)"
            }
          },
          "required": ["query"]
        }
      },
      {
        "name": "cappyrag_get_stats",
        "displayName": "CappyRAG: Get Statistics",
        "modelDescription": "Get comprehensive statistics about the CappyRAG knowledge base including document counts and storage metrics",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappyrag_get_supported_formats",
        "displayName": "CappyRAG: Get Supported Formats",
        "modelDescription": "Get list of supported document formats for CappyRAG processing with format specifications",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappyrag_estimate_processing_time",
        "displayName": "CappyRAG: Estimate Processing Time",
        "modelDescription": "Estimate processing time for a document based on file size and complexity",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Absolute path to the document file"
            }
          },
          "required": ["filePath"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && tsc -p ./tsconfig.mcp-standalone.json && npm run copy-assets && npm run copy-mcp-package",
    "copy-assets": "node -e \"const fs=require('fs'),path=require('path');const src='src/commands/cappyrag/templates',dest='out/commands/cappyrag/templates';fs.mkdirSync(dest,{recursive:true});['dashboard.css','dashboard.js'].forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dest,f)));const webviewSrc='src/webview',webviewDest='out/webview';fs.mkdirSync(webviewDest,{recursive:true});fs.readdirSync(webviewSrc).filter(f=>f.endsWith('.html')||f.endsWith('.js')).forEach(f=>fs.copyFileSync(path.join(webviewSrc,f),path.join(webviewDest,f)))\"",
    "copy-mcp-package": "node -e \"const fs=require('fs');fs.mkdirSync('out/mcp-standalone',{recursive:true});fs.writeFileSync('out/mcp-standalone/package.json',JSON.stringify({type:'module'},null,2))\"",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test-simple": "npm run compile && echo 'Simple tests compiled successfully - check VS Code test output'",
    "test-watch": "npm run test -- --watch",
    "test-folder-structure": "npm run compile && echo 'Teste de estrutura de pastas compilado com sucesso'",
    "package": "npm version patch && npm run compile && vsce package --dependencies",
    "publish": "npm run package && vsce publish && code --install-extension cappy-*.vsix"
  },
