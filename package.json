{
  "name": "cappy",
  "displayName": "Cappy",
  "description": "AI coding companion with Single-Focus Workflow, CappyRAG hybrid search, and automatic learning from mistakes. Prevents errors, boosts productivity, and orchestrates context for every task. Compatible with VS Code and Cursor.",
  "version": "3.0.2",
  "publisher": "eduardocecon",
  "engines": {
    "vscode": "^1.105.0",
    "cursor": ">=0.1.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "cursor",
    "learning",
    "productivity",
    "automation",
    "prevention",
    "task-management",
    "cursor-compatible",
    "hybrid-search",
    "rag",
    "vector-search",
    "graph-database",
    "semantic-search",
    "cappyrag",
    "language-model-tools"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "languageModel": {
      "enabled": true
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "cappy.openGraph",
        "title": "ðŸ“Š Cappy: Open Graph",
        "category": "Cappy"
      },
      {
        "command": "cappy.focusActivity",
        "title": "Cappy: Focus Activity View",
        "category": "Cappy"
      },
      {
        "command": "cappy.openChat",
        "title": "ðŸ’¬ Cappy: Open Chat",
        "category": "Cappy"
      },
      {
        "command": "cappy.chat.newSession",
        "title": "New Chat Session",
        "category": "Cappy",
        "icon": "$(add)"
      },
      {
        "command": "cappy.chat.renameSession",
        "title": "Rename Session",
        "category": "Cappy",
        "icon": "$(edit)"
      },
      {
        "command": "cappy.chat.deleteSession",
        "title": "Delete Session",
        "category": "Cappy",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cappy",
          "title": "Cappy",
          "icon": "resources/icons/cappy-activity.svg"
        }
      ]
    },
    "views": {
      "cappy": [
        {
          "id": "cappy.chatView",
          "name": "Chat",
          "type": "webview",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "cappy.openGraph",
          "when": "true",
          "group": "cappy"
        },
        {
          "command": "cappy.focusActivity",
          "when": "true",
          "group": "cappy"
        },
        {
          "command": "cappy.openChat",
          "when": "true",
          "group": "cappy"
        },
        {
          "command": "cappy.chat.newSession",
          "when": "true",
          "group": "cappy"
        }
      ],
      "view/title": [
        {
          "command": "cappy.chat.newSession",
          "when": "view == cappy.chatView",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cappy.openGraph",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cappy",
      "properties": {}
    },
    "languageModelTools": [
      {
        "name": "cappy_create_file",
        "displayName": "Create File",
        "modelDescription": "Creates a new file in the workspace with the specified content. Use this when the user asks to create a file.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "Relative path from workspace root where the file should be created"
            },
            "content": {
              "type": "string",
              "description": "Content to write to the file"
            }
          },
          "required": [
            "path",
            "content"
          ]
        }
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "vscode:prepublish": "npm run compile-extension",
    "compile-extension": "tsc -p tsconfig.extension.json",
    "watch": "tsc -watch -p tsconfig.extension.json",
    "package": "npm version patch && npm run compile-extension && vsce package --dependencies",
    "publish": "npm run package && vsce publish && code --install-extension cappy-*.vsix"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.11.28",
    "@assistant-ui/react-markdown": "^0.11.1",
    "@lancedb/lancedb": "^0.22.2",
    "@typescript-eslint/parser": "^8.46.0",
    "@xenova/transformers": "^2.17.2",
    "gray-matter": "^4.0.3",
    "kuzu-wasm": "^0.11.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "reagraph": "^4.30.5",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/vscode": "^1.105.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
