{
  "name": "cappy",
  "displayName": "Cappy",
  "description": "AI coding companion with Single-Focus Workflow, Mini-LightRAG hybrid search, and automatic learning from mistakes. Prevents errors, boosts productivity, and orchestrates context for every task. Compatible with VS Code and Cursor.",
  "icon": "assets/icon.png",
  "version": "2.9.17",
  "publisher": "eduardocecon",
  "engines": {
    "vscode": "^1.75.0",
    "cursor": ">=0.1.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "cursor",
    "learning",
    "productivity",
    "automation",
    "prevention",
    "task-management",
    "cursor-compatible",
    "hybrid-search",
    "rag",
    "vector-search",
    "graph-database",
    "semantic-search",
    "mini-lightrag",
    "language-model-tools"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cappy.init",
        "title": "ü¶´ Initialize Cappy",
        "category": "Cappy"
      },
      {
        "command": "cappy.knowstack",
        "title": "üß† Cappy: KnowStack",
        "category": "Cappy"
      },
      {
        "command": "cappy.runknowstack",
        "title": "üß† Cappy: KnowStack (alias)",
        "category": "Cappy"
      },
      {
        "command": "cappy.knowtask",
        "title": "üß† Cappy: KnowStack (typo alias)",
        "category": "Cappy"
      },
      {
        "command": "cappy.viewTelemetryTerms",
        "title": "üìÑ Cappy: Ver Termos de Telemetria",
        "category": "Cappy"
      },
      {
        "command": "cappy.new",
        "title": "üß© Cappy: New Task",
        "category": "Cappy"
      },
      {
        "command": "cappy.getActiveTask",
        "title": "üìÑ Cappy: Get Active Task (XML content)",
        "category": "Cappy"
      },
      {
        "command": "cappy.version",
        "title": "üì¶ Cappy: Get Version",
        "category": "Cappy"
      },
      {
        "command": "cappy.createTaskFile",
        "title": "üìù Cappy: Create Task File",
        "category": "Cappy"
      },
      {
        "command": "cappy.changeTaskStatus",
        "title": "üîÑ Cappy: Change Task Status",
        "category": "Cappy"
      },
      {
        "command": "cappy.completeTask",
        "title": "‚úÖ Cappy: Complete Task",
        "category": "Cappy"
      },
      {
        "command": "cappy.addPreventionRule",
        "title": "‚ûï Cappy: Add Prevention Rule",
        "category": "Cappy"
      },
      {
        "command": "cappy.removePreventionRule",
        "title": "‚ûñ Cappy: Remove Prevention Rule",
        "category": "Cappy"
      },
      {
        "command": "cappy.workOnCurrentTask",
        "title": "üéØ Cappy: Work on Current Task",
        "category": "Cappy"
      },
      {
        "command": "cappy.reindex",
        "title": "üîÑ Cappy: Reindex Files",
        "category": "Cappy"
      },
      {
        "command": "miniRAG.indexWorkspace",
        "title": "üîç Mini-LightRAG: Index Workspace",
        "category": "Mini-LightRAG"
      },
      {
        "command": "miniRAG.search",
        "title": "üîé Mini-LightRAG: Search",
        "category": "Mini-LightRAG"
      },
      {
        "command": "miniRAG.openGraph",
        "title": "üìä Mini-LightRAG: Open Graph",
        "category": "Mini-LightRAG"
      },
      {
        "command": "miniRAG.indexFile",
        "title": "üìÑ Mini-LightRAG: Index File",
        "category": "Mini-LightRAG"
      },
      {
        "command": "miniRAG.pauseWatcher",
        "title": "‚è∏Ô∏è Mini-LightRAG: Pause Watcher",
        "category": "Mini-LightRAG"
      },
      {
        "command": "miniRAG.populateSampleData",
        "title": "üî® Mini-LightRAG: Populate Sample Data",
        "category": "Mini-LightRAG"
      }
    ],
    "configuration": {
      "title": "Cappy",
      "properties": {
        "cappy.autoUpdateCopilotContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update Copilot context when prevention rules change"
        },
        "cappy.maxPreventionRules": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of prevention rules to include in Copilot context"
        },
        "cappy.taskTimeEstimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic task time estimation and atomicity analysis"
        },
        "cappy.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for Cappy events"
        },
        "miniRAG.model": {
          "type": "string",
          "enum": ["fast", "quality"],
          "default": "fast",
          "description": "Model type for embeddings: fast (lightweight) or quality (better accuracy)"
        },
        "miniRAG.topK": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of top results to return in searches"
        },
        "miniRAG.maxStorageGB": {
          "type": "number",
          "default": 2,
          "minimum": 0.1,
          "maximum": 50,
          "description": "Maximum storage limit in GB for LanceDB and cache"
        },
        "miniRAG.maxNodes": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 100000,
          "description": "Maximum number of nodes in the graph"
        },
        "miniRAG.maxEdges": {
          "type": "number",
          "default": 50000,
          "minimum": 1000,
          "maximum": 500000,
          "description": "Maximum number of edges in the graph"
        },
        "miniRAG.excludeGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "out/**",
            "*.vsix",
            "*.jpg",
            "*.png",
            "*.gif",
            "*.pdf",
            "*.zip"
          ],
          "description": "Glob patterns for files and directories to exclude from indexing"
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/capybara.json"
      }
    ],
    "languages": [
      {
        "id": "cappy-task-xml",
        "aliases": [
          "Cappy Task XML",
          "cappy-task"
        ],
        "extensions": [
          ".task.xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown.cappy",
        "path": "./syntaxes/forge-task.tmLanguage.json"
      },
      {
        "language": "cappy-task-xml",
        "scopeName": "text.xml.cappy.task",
        "path": "./syntaxes/cappy-task-xml.tmLanguage.json"
      }
    ],
    "languageModelTools": [
      {
        "name": "cappy_init",
        "displayName": "Cappy: Initialize",
        "modelDescription": "Initialize Cappy structure in the workspace (.cappy folder, config files, copilot-instructions.md)",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_knowstack",
        "displayName": "Cappy: Know Stack",
        "modelDescription": "Analyze the workspace and generate stack.md documentation with project structure and technology stack",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_new_task",
        "displayName": "Cappy: New Task",
        "modelDescription": "Generate step-by-step script for creating a new Cappy task with category, description, and steps",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_create_task",
        "displayName": "Cappy: Create Task File",
        "modelDescription": "Create XML task file with rich context injection and automatic prevention rules",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_work_on_task",
        "displayName": "Cappy: Work on Current Task",
        "modelDescription": "Execute current task step with context-aware assistance and prevention rules verification",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_complete_task",
        "displayName": "Cappy: Complete Task",
        "modelDescription": "Complete current task, capture learnings, update context metrics and move to history",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "cappy_reindex",
        "displayName": "Cappy: Reindex",
        "modelDescription": "Rebuild semantic indexes for tasks, documentation and prevention rules",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test-simple": "npm run compile && echo 'Simple tests compiled successfully - check VS Code test output'",
    "test-watch": "npm run test -- --watch",
    "test-folder-structure": "npm run compile && echo 'Teste de estrutura de pastas compilado com sucesso'",
    "package": "vsce package --dependencies",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "sinon": "^21.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.22.1",
    "@noble/hashes": "^1.8.0",
    "@xenova/transformers": "^2.17.2",
    "date-fns": "^2.29.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cecon/cappy.git"
  },
  "bugs": {
    "url": "https://github.com/cecon/cappy/issues"
  },
  "homepage": "https://github.com/cecon/cappy#readme",
  "license": "MIT",
  "author": "",
  "type": "commonjs"
}
