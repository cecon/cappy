    "configuration": {
      "title": "Cappy",
      "properties": {
        "cappy.autoUpdateCopilotContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update Copilot context when prevention rules change"
        },
        "cappy.maxPreventionRules": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of prevention rules to include in Copilot context"
        },
        "cappy.taskTimeEstimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic task time estimation and atomicity analysis"
        },
        "cappy.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for Cappy events"
        },
        "cappyrag.model": {
          "type": "string",
          "enum": [
            "fast",
            "quality"
          ],
          "default": "fast",
          "description": "Model type for embeddings: fast (lightweight) or quality (better accuracy)"
        },
        "cappyrag.topK": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of top results to return in searches"
        },
        "cappyrag.maxStorageGB": {
          "type": "number",
          "default": 2,
          "minimum": 0.1,
          "maximum": 50,
          "description": "Maximum storage limit in GB for LanceDB and cache"
        },
        "cappyrag.maxNodes": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 100000,
          "description": "Maximum number of nodes in the graph"
        },
        "cappyrag.maxEdges": {
          "type": "number",
          "default": 50000,
          "minimum": 1000,
          "maximum": 500000,
          "description": "Maximum number of edges in the graph"
        },
        "cappyrag.excludeGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "out/**",
            "*.vsix",
            "*.jpg",
            "*.png",
            "*.gif",
            "*.pdf",
            "*.zip"
          ],
          "description": "Glob patterns for files and directories to exclude from indexing"
        }
      }
    },
