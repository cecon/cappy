{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals"],
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@infra/*": ["src/nivel2/infrastructure/*"],
      "@types/*": ["src/shared/types/*"]
    }
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "out", "dist"]
}
