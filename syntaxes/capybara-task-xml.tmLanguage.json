{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Cappy Task XML",
    "scopeName": "text.xml.cappy.task",
    "patterns": [
        {
            "include": "text.xml"
        },
        {
            "name": "entity.name.tag.cappy.task-root",
            "match": "</?task\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.task-root"
                }
            }
        },
        {
            "name": "entity.name.tag.cappy.metadata",
            "match": "</?metadados\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.metadata"
                }
            }
        },
        {
            "name": "entity.name.tag.cappy.context",
            "match": "</?contexto\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.context"
                }
            }
        },
        {
            "name": "entity.name.tag.cappy.steps",
            "match": "</?steps\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.steps"
                }
            }
        },
        {
            "name": "entity.name.tag.cappy.step",
            "match": "</?step\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.step"
                }
            }
        },
        {
            "name": "entity.name.tag.cappy.validation",
            "match": "</?validacao\\b",
            "captures": {
                "0": {
                    "name": "entity.name.tag.cappy.validation"
                }
            }
        },
        {
            "name": "entity.other.attribute-name.cappy.task-id",
            "match": "\\bid\\s*=",
            "captures": {
                "0": {
                    "name": "entity.other.attribute-name.cappy.task-id"
                }
            }
        },
        {
            "name": "entity.other.attribute-name.cappy.completed",
            "match": "\\bconcluido\\s*=",
            "captures": {
                "0": {
                    "name": "entity.other.attribute-name.cappy.completed"
                }
            }
        },
        {
            "name": "entity.other.attribute-name.cappy.required",
            "match": "\\bobrigatorio\\s*=",
            "captures": {
                "0": {
                    "name": "entity.other.attribute-name.cappy.required"
                }
            }
        },
        {
            "name": "entity.other.attribute-name.cappy.depends-on",
            "match": "\\bdependeDe\\s*=",
            "captures": {
                "0": {
                    "name": "entity.other.attribute-name.cappy.depends-on"
                }
            }
        },
        {
            "name": "string.quoted.double.cappy.status-active",
            "match": "\"em-andamento\"",
            "captures": {
                "0": {
                    "name": "string.quoted.double.cappy.status-active"
                }
            }
        },
        {
            "name": "string.quoted.double.cappy.status-paused",
            "match": "\"pausada\"",
            "captures": {
                "0": {
                    "name": "string.quoted.double.cappy.status-paused"
                }
            }
        },
        {
            "name": "string.quoted.double.cappy.status-completed",
            "match": "\"concluida\"",
            "captures": {
                "0": {
                    "name": "string.quoted.double.cappy.status-completed"
                }
            }
        },
        {
            "name": "string.quoted.double.cappy.boolean-true",
            "match": "\"true\"",
            "captures": {
                "0": {
                    "name": "string.quoted.double.cappy.boolean-true"
                }
            }
        },
        {
            "name": "string.quoted.double.cappy.boolean-false",
            "match": "\"false\"",
            "captures": {
                "0": {
                    "name": "string.quoted.double.cappy.boolean-false"
                }
            }
        },
        {
            "name": "support.type.cappy.progress",
            "match": "\\d+/\\d+",
            "captures": {
                "0": {
                    "name": "support.type.cappy.progress"
                }
            }
        }
    ]
}
