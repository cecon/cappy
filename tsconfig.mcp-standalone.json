{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "out/mcp-standalone",
    "rootDir": "src/mcp-standalone",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"]
  },
  "include": [
    "src/mcp-standalone/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
