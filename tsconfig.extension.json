{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022"],
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vscode", "node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "test",
    "src/**/*.tsx",
    "src/nivel1/main.tsx",
    "src/nivel1/graph-main.tsx",
    "src/nivel1/ui/**",
    "src/domains/dashboard/use-cases/__tests__",
    "src/lib"
  ]
}
