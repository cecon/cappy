{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vscode", "node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "src/**/*.tsx",
    "src/main.tsx",
    "src/App.tsx",
    "src/components/**",
    "src/adapters/secondary/parsers",
    "src/adapters/secondary/vector",
    "src/domains/graph/use-cases/__tests__",
    "src/lib",
    "src/services"
  ]
}
